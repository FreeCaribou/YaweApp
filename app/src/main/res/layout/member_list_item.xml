<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_memberItem_name"
        android:text="Name"
        style="@style/H2"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <!-- TODO mettre des images à la place du texte pour représenter race et classe -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_memberItem_race"
            android:text="Race"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/gw2_icon"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_memberItem_profession"
            android:text="Profession"
            android:gravity="center"
            android:layout_weight="1"
            android:src="@drawable/gw2_icon"
            />

    </LinearLayout>

</LinearLayout>